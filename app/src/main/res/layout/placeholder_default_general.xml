<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/horizontal_margin_24">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/item_default_icon"
        android:layout_width="@dimen/placeholder_default_icon_size"
        android:layout_height="@dimen/placeholder_default_icon_size"
        android:scaleType="fitCenter"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/item_default_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/horizontal_margin_24"
        android:textColor="@color/black"
        android:textSize="@dimen/placeholder_default_text_message"
        tools:lines="2"
        tools:text="@tools:sample/lorem/random" />

    <Button
        android:id="@+id/item_default_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/colorAccent"
        android:visibility="gone"
        app:backgroundTint="@color/colorPrimary"
        android:background="@color/colorPrimary"
        android:text="@string/placeholder_error_button_label" />

</LinearLayout>